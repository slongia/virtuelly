@page
@model Razor.Web.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Create Account";
}

<h2>Create Account</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div style="color:red">@Model.ErrorMessage</div>
}

<div asp-validation-summary="All" style="color:red"></div>

<form method="post">
    @Html.AntiForgeryToken()

    <div>
        <label asp-for="Input.Email"></label><br />
        <input asp-for="Input.Email" />
        <span asp-validation-for="Input.Email" style="color:red"></span>
    </div>

    <div style="margin-top:1rem;">
        <label asp-for="Input.Password"></label><br />
        <input asp-for="Input.Password" type="password" />
        <span asp-validation-for="Input.Password" style="color:red"></span>
    </div>

    <button type="submit" style="margin-top:1rem;">Register</button>
</form>

<p style="margin-top:1rem;">
    Already have an account?
    <a asp-page="/Auth/Login">Sign in</a>
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}